{
  "editor.formatOnSave": true,

  // === clangd 설정 ===
  "clangd.arguments": [
    "--compile-commands-dir=build",
    "--background-index",              // 인덱스를 백그라운드로 유지
    "--clang-tidy",                    // clang-tidy 검사 켜기
    "--completion-style=detailed",     // 자동완성 상세히 표시
    "--header-insertion=iwyu",         // include 지능적 삽입

  ],
  "clangd.path": "/opt/homebrew/opt/llvm/bin/clangd", 

  "files.autoSave": "onFocusChange",
  "files.associations": {
    "*.hpp": "cpp",
    "*.tpp": "cpp"
  }
}

